@model _03.MarkomApplication.ModelView.SouvenirModelView

@{
    ViewBag.Title = "Edit";
}

<form style="color:#343a40">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-2">
                <label>*Souvenir Code</label>
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", placeholder = "Auto Generated" } })
                <span class="validasiAlert validasi1" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
            <div class="col-md-2">
                <label style="float:right">*Unit Name</label>
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.mUnitId, (IEnumerable<SelectListItem>)ViewBag.UnitName, "-Select Unit Name-", new { @class = "form-control" })
                @*@Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Unit Name" } })*@
                <span class="validasiAlert validasi2" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="col-md-2">
                <label>*Souvenir Name</label>
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Souvenir Name" } })
                <span class="validasiAlert validasi3" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
            <div class="col-md-2">
                <label style="float:right">Description</label>
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Description" } })
            </div>
        </div>
        <div class="row" style="padding-top:35px">
            <div class="col-md-12">
                @Html.HiddenFor(model => model.id)
                <button type="button" class="btn btn-block bg-gradient-warning" style="width:80px; float:right" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-block btn-primary" id="edit_souvenir_save" style="width:80px; float:right; margin-top:0%; margin-right:5px">Save</button>
            </div>
        </div>
    </div>
</form>
